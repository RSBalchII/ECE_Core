LLM_MODEL_NAME=OpenAI-20B-NEOPlus-Uncensored-IQ4_NL.gguf
LLM_CONTEXT_SIZE=16384
LLM_MAX_TOKENS=1024
LLM_GPU_LAYERS=-1
LLM_EMBEDDINGS_DEFAULT_BATCH_SIZE=2
